{
    "name": "socket-watcher",
    "version": "1.0.0",
    "description": "Socket Watcher Tool",
    "exports": "./dist/",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "dev": "ts-node --esm src/start.ts",
        "tests": "jest --detectOpenHandles --coverage",
        "tests:integration": "echo 'Hello integration tests'",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint --fix ./src/**/*.ts",
        "build": "tsc && npm run copy-proto",
        "copy-proto": "cp -R ./src/schemas/ ./dist/schemas",
        "start": "node --experimental-import-meta-resolve --trace-warnings dist/index.js",
        "link:lib:build": "npm run link:lib && npm run build"
    },
    "dependencies": {
        "@ethersproject/abi": "^5.7.0",
        "@ethersproject/bignumber": "^5.7.0",
        "@ethersproject/contracts": "^5.7.0",
        "@ethersproject/keccak256": "^5.7.0",
        "@ethersproject/providers": "^5.7.2",
        "@ethersproject/solidity": "^5.7.0",
        "@ethersproject/wallet": "^5.7.0",
        "@fastify-decorators/typedi": "^4.0.0-next.5",
        "bullmq": "^4.12.6",
        "dotenv": "^16.3.1",
        "fastify": "^4.24.3",
        "fastify-decorators": "^4.0.0-next.5",
        "jest": "^29.7.0",
        "mongoose": "^7.6.3",
        "redis": "^4.6.10",
        "typedi": "^0.10.0",
        "uuidv4": "^6.2.13",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@babel/preset-typescript": "^7.23.2",
        "@types/jest": "^29.5.6",
        "@types/node": "^20.8.9",
        "@types/redis": "^4.0.11",
        "@typescript-eslint/eslint-plugin": "^5.31.0",
        "@typescript-eslint/parser": "^5.31.0",
        "babel-plugin-transform-import-meta": "^2.2.1",
        "eslint": "^8.20.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.26.0",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "tsup": "^6.2.3",
        "typescript": "^4.8.2"
    }
}
